<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/scrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scrim_light"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProgressMsg"
            android:textColor="@color/white"
            android:layout_above="@+id/lavProgress"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_centerHorizontal="true"
            android:text="@string/saving_note"
    />
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavProgress"
            android:layout_width="@dimen/margin_craziest"
            android:layout_margin="@dimen/margin_default"
            android:layout_height="@dimen/margin_crazy"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="progress.json"
            app:lottie_loop="true"/>

</RelativeLayout>
